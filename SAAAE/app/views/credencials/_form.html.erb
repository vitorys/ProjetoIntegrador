<%= form_for @credencial, :html => { :class => "form-horizontal credencial" } do |f| %>

  <% if @credencial.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@credencial.errors.count, "error") %> prohibited this credencial from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @credencial.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :credencial_senha, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :credencial_senha, :class => 'form-control' %>
    </div>
    <%=f.error_span(:credencial_senha) %>
  </div>
  <div class="form-group">
    <%= f.label :pessoa_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pessoa_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:pessoa_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                credencials_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
