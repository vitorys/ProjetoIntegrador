<%- model_class = Atendimento -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:aluno_id) %>:</strong></dt>
  <dd><%= @atendimento.aluno_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:area) %>:</strong></dt>
  <dd><%= @atendimento.area %></dd>
  <dt><strong><%= model_class.human_attribute_name(:funcionario_id) %>:</strong></dt>
  <dd><%= @atendimento.funcionario_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              atendimentos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_atendimento_path(@atendimento), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              atendimento_path(@atendimento),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
