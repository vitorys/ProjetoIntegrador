<%- model_class = Aluno -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:aluno_ra) %>:</strong></dt>
  <dd><%= @aluno.aluno_ra %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aluno_curso) %>:</strong></dt>
  <dd><%= @aluno.aluno_curso %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aluno_data_ingresso) %>:</strong></dt>
  <dd><%= @aluno.aluno_data_ingresso %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aluno_periodo) %>:</strong></dt>
  <dd><%= @aluno.aluno_periodo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aluno_frequencia) %>:</strong></dt>
  <dd><%= @aluno.aluno_frequencia %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aluno_coeficiente) %>:</strong></dt>
  <dd><%= @aluno.aluno_coeficiente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pessoa_id) %>:</strong></dt>
  <dd><%= @aluno.pessoa_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              alunos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_aluno_path(@aluno), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              aluno_path(@aluno),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
