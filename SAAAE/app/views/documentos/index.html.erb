<%- model_class = Documento -%>
<div class="page-header">
  <h1>Documentos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>RG</th>
      <th>CPF</th>
      <th>Data de Criação</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @documentos.each do |documento| %>
      <tr>
        <td><%= link_to documento.id, documento_path(documento) %></td>
        <td><%= documento.doc_rg %></td>
        <td><%= documento.doc_cpf %></td>
        <td><%=l documento.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      documento_path(documento), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_documento_path(documento), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      documento_path(documento),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza??')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_documento_path,
            :class => 'btn btn-primary' %>
<p><%= paginate @documentos %>
