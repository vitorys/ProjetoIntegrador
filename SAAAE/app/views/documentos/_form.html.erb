<%= form_for @documento, :html => { :class => "form-horizontal documento" } do |f| %>

  <% if @documento.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@documento.errors.count, "error") %> prohibited this documento from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @documento.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :doc_rg,'RG', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :doc_rg, :class => 'form-control' %>
    </div>
    <!--<%=f.error_span(:doc_rg) %>-->
  </div>
  <div class="form-group">
    <%= f.label :doc_cpf,'CPF', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :doc_cpf, :class => 'form-control' %>
    </div>
    <!--<%=f.error_span(:doc_cpf) %>-->
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                documentos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
