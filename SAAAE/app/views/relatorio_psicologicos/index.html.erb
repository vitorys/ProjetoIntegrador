<%- model_class = RelatorioPsicologico -%>
<div class="page-header">
<h1>Relatórios Psicológicos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Objetivo</th>
      <th>Atendimento</th>
      <th>Funcionário Responsável</th>
      <th>Data de Criação</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @relatorio_psicologicos.each do |relatorio_psicologico| %>
      <tr>
        <td><%= relatorio_psicologico.rp_objetivo %></td>
        <td><%= relatorio_psicologico.rp_atendimento %></td>
        <td><%=relatorio_psicologico.relatorio.funcionario.pessoa.pessoa_nome%></td>
        <td><%=l relatorio_psicologico.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      relatorio_psicologico_path(relatorio_psicologico), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_relatorio_psicologico_path(relatorio_psicologico), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      relatorio_psicologico_path(relatorio_psicologico),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza??')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_relatorio_psicologico_path,
            :class => 'btn btn-primary' %>
