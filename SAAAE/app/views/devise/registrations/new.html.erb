<style type="text/css">
  @import url(https://fonts.googleapis.com/css?family=Roboto:300);

.login-page {
  width: 360px;
  position: fixed;
  top: 50%;
  left: 50%;
  margin-top: -198.7px;
  margin-left: -180px;
}
.form {
  position: relative;
  z-index: 1;
  background: #FFF;
  max-width: 360px;
  margin: 0px;
  padding: 45px;
  text-align: center;
  box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
}
.form input {
  font-family: "Roboto", sans-serif;
  outline: 0;
  background: #f2f2f2;
  width: 100%;
  border: 0;
  margin: 0 0 15px;
  padding: 15px;
  box-sizing: border-box;
  font-size: 14px;
}
.form button {
  font-family: "Roboto", sans-serif;
  text-transform: uppercase;
  outline: 0;
  background: #4CAF50;
  width: 100%;
  border: 0;
  padding: 15px;
  color: #FFFFFF;
  font-size: 14px;
  -webkit-transition: all 0.3 ease;
  transition: all 0.3 ease;
  cursor: pointer;
}
.form button:hover,.form button:active,.form button:focus {
  background: #43A047;
}
.form .message {
  margin: 15px 0 0;
  color: #b3b3b3;
  font-size: 12px;
}
.form .message a {
  color: #4CAF50;
  text-decoration: none;
}
.form .register-form {
  display: none;
}
.container {
  position: relative;
  z-index: 1;
  max-width: 300px;
  margin: 0 auto;
}
.container:before, .container:after {
  content: "";
  display: block;
  clear: both;
}
.container .info {
  margin: 50px auto;
  text-align: center;
}
.container .info h1 {
  margin: 0 0 15px;
  padding: 0;
  font-size: 36px;
  font-weight: 300;
  color: #1a1a1a;
}
.container .info span {
  color: #4d4d4d;
  font-size: 12px;
}
.container .info span a {
  color: #000000;
  text-decoration: none;
}
.container .info span .fa {
  color: #EF3B3A;
}
body {
  background: #333333;
}
</style>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="login-page">
  <div class="form">
    <form class="register-form">
      
      <% @pessoa = Pessoa.new %>
<%= form_for @pessoa, :html => { :class => "form-horizontal pessoa" } do |f| %>

  <% if @pessoa.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">Não foi possível realizar o cadastro!</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pessoa.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :pessoa_nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pessoa_nome, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pessoa_sexo, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
    <%= f.select(:pessoa_sexo, [['Feminino', 'F'], ['Masculino', 'M']], {:prompt => 'Selecione o sexo'})%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pessoa_endereco, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pessoa_endereco, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pessoa_cidade, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pessoa_cidade, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pessoa_estado, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pessoa_estado, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pessoa_cep, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pessoa_cep, :class => 'form-control' %>
    </div>
  </div>
    
  <%= f.fields_for :documento do |ff| %>
  <div class="form-group">
    <%= ff.label :doc_rg, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= ff.text_field :doc_rg, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= ff.label :doc_cpf, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= ff.text_field :doc_cpf, :class => 'form-control' %>
    </div>
  </div>
  <%end%>

  <%= f.fields_for :user do |fff| %>
    <div class="form-group">
      <%= fff.label :email, :class => 'control-label col-lg-2' %>   
      <div class="col-lg-10">
          <%= fff.text_field :email, :class => 'form-control' %>
      </div>
    </div>
    
  <div class="field form-group">
    <%= fff.label :password, :class => 'control-label col-lg-2' %>   
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />    
    <div class="col-lg-10">
      <%= fff.password_field :password, autocomplete: "off" %>
    </div>
  </div>

  <div class="field form-group">
    <%= fff.label :password_confirmation, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= fff.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>
<%end%>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pessoas_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>





    <%= f.submit "Cadastrar", :class => ".button" %>
    
    <%= render "pessoas/form" %>

    <%= render "devise/shared/links" %>

    </form>
  </div>
</div>

<% end %>
