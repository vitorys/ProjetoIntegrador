<%= form_for @pessoa, :html => { :class => "form-horizontal pessoa" } do |f| %>

  <% if @pessoa.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@pessoa.errors.count, "error") %> prohibited this pessoa from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @pessoa.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :pessoa_nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pessoa_nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:pessoa_nome) %>
  </div>
  <div class="form-group">
    <%= f.label :pessoa_documento, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :pessoa_documento, :class => 'form-control' %>
    </div>
    <%=f.error_span(:pessoa_documento) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                pessoas_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
