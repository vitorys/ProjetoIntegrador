<%- model_class = Pessoa -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pessoa_nome) %>:</strong></dt>
  <dd><%= @pessoa.pessoa_nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pessoa_documento) %>:</strong></dt>
  <dd><%= @pessoa.pessoa_documento %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pessoas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pessoa_path(@pessoa), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pessoa_path(@pessoa),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
