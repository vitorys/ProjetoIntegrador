<%- model_class = Pessoa -%>
<div class="page-header">
<h1>Informações</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:pessoa_nome) %>:</strong></dt>
  <dd><%= @pessoa.pessoa_nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pessoa_endereco) %>:</strong></dt>
  <dd><%= @pessoa.pessoa_endereco %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pessoa_cidade) %>:</strong></dt>
  <dd><%= @pessoa.pessoa_cidade %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pessoa_estado) %>:</strong></dt>
  <dd><%= @pessoa.pessoa_estado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pessoa_cep) %>:</strong></dt>
  <dd><%= @pessoa.pessoa_cep %></dd>
  <dt><strong><%= model_class.human_attribute_name(:documento_id) %>:</strong></dt>
  <dd><%= @pessoa.documento_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pessoas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_pessoa_path(@pessoa), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              pessoa_path(@pessoa),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza??')) },
              :class => 'btn btn-danger' %>
