<%- model_class = RelatorioGeral -%>
<div class="page-header">
  <h1>Relatório Geral</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Objetivo</th>
      <th>Atendimento</th>
      <th>Data de Criação</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @relatorio_gerals.each do |relatorio_geral| %>
      <tr>
        <td><%= link_to relatorio_geral.id, relatorio_geral_path(relatorio_geral) %></td>
        <td><%= relatorio_geral.rg_objetivo %></td>
        <td><%= relatorio_geral.rg_atendimento %></td>
        <td><%=l relatorio_geral.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      relatorio_geral_path(relatorio_geral), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_relatorio_geral_path(relatorio_geral), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      relatorio_geral_path(relatorio_geral),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza??')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_relatorio_geral_path,
            :class => 'btn btn-primary' %>
<p><%= paginate @relatorio_gerals %>
