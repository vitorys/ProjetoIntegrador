<%- model_class = RelatorioGeral -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:rg_objetivo) %></th>
      <th><%= model_class.human_attribute_name(:rg_atendimento) %></th>
      <th><%= model_class.human_attribute_name(:relatorio_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @relatorio_gerals.each do |relatorio_geral| %>
      <tr>
        <td><%= link_to relatorio_geral.id, relatorio_geral_path(relatorio_geral) %></td>
        <td><%= relatorio_geral.rg_objetivo %></td>
        <td><%= relatorio_geral.rg_atendimento %></td>
        <td><%= relatorio_geral.relatorio_id %></td>
        <td><%=l relatorio_geral.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      relatorio_geral_path(relatorio_geral), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_relatorio_geral_path(relatorio_geral), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      relatorio_geral_path(relatorio_geral),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_relatorio_geral_path,
            :class => 'btn btn-primary' %>
