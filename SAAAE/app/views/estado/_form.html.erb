<%= form_for @estado, :html => { :class => "form-horizontal estado" } do |f| %>

  <% if @estado.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@estado.errors.count, "error") %> prohibited this estado from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @estado.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :estado_nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :estado_nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:estado_nome) %>
  </div>
  <div class="form-group">
    <%= f.label :estado_uf, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :estado_uf, :class => 'form-control' %>
    </div>
    <%=f.error_span(:estado_uf) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                estados_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
