<%- model_class = Objetivo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>

      <th>Motivo</th>
      <th>Criado em</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @objetivos.each do |objetivo| %>
      <tr>
        <td><%= objetivo.motivo %></td>
        <td><%=l objetivo.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      objetivo_path(objetivo), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_objetivo_path(objetivo), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      objetivo_path(objetivo),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem certeza??')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_objetivo_path,
            :class => 'btn btn-primary' %>
