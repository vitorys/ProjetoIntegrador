<%= form_for @objetivo, :html => { :class => "form-horizontal objetivo" } do |f| %>

  <% if @objetivo.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@objetivo.errors.count, "error") %> prohibited this objetivo from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @objetivo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :motivo, 'Motivo *', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :motivo, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                objetivos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
