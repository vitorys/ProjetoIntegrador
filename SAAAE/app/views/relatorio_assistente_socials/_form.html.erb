<%= form_for @relatorio_assistente_social, :html => { :class => "form-horizontal relatorio_assistente_social" } do |f| %>

  <% if @relatorio_assistente_social.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@relatorio_assistente_social.errors.count, "error") %> prohibited this relatorio_assistente_social from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @relatorio_assistente_social.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :ras_motivo,'Motivo : *', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :ras_motivo, :class => 'form-control' %>
    </div>
    <!--<%=f.error_span(:ras_motivo) %>-->
  </div>
  <div class="form-group">
    <%= f.label :ras_entrevista,'Entrevista : *', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :ras_entrevista, :class => 'form-control' %>
    </div>
    <!--<%=f.error_span(:ras_entrevista) %>-->
  </div>

  <%= f.fields_for :relatorio do |ff| %>
  <div class="form-group">
    <%= ff.label :relatorio_data,'Data : *', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= ff.text_field :relatorio_data, :class => 'form-control' %>
    </div>
    <!--<%=ff.error_span(:relatorio_data) %>-->
  </div>
  <div class="form-group">
    <%= ff.label :aluno_id,'Aluno : *', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
    <%= ff.select :aluno_id, options_for_select(Aluno.all.map{|a|[a.pessoa.pessoa_nome, a.id]}), {:prompt => 'Selecione o aluno'}%>    
    </div>
    <!--<%=ff.error_span(:aluno_id) %>-->
  </div>
  <div class="form-group">
    <%= ff.label :funcionario_id,'Funcionário : *', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
<%= ff.select :funcionario_id, options_for_select(Funcionario.all.map{|f|[f.pessoa.pessoa_nome, f.id]}), {:prompt => 'Selecione o Funcionário'}%>
      </div>
    <!--<%=ff.error_span(:funcionario_id) %>-->
  </div>
<% end %>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                relatorio_assistente_socials_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
