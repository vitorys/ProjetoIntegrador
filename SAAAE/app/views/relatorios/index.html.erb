<%- model_class = Relatorio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Data do Atendimento</th>
      <th>Nome do Aluno</th>
      <th>Funcionário Responsável</th>
      <th>Data de Criação</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @relatorios.each do |relatorio| %>
      <tr>
        <td><%= link_to relatorio.id, relatorio_path(relatorio) %></td>
        <td><%= relatorio.relatorio_data %></td>
        <td><%= relatorio.aluno_id %></td>
        <td><%= relatorio.funcionario_id %></td>
        <td><%=l relatorio.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      relatorio_path(relatorio), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_relatorio_path(relatorio), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      relatorio_path(relatorio),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza??')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_relatorio_path,
            :class => 'btn btn-primary' %>
