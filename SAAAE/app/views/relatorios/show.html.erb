<%- model_class = Relatorio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:relatorio_data) %>:</strong></dt>
  <dd><%= @relatorio.relatorio_data %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aluno_id) %>:</strong></dt>
  <dd><%= @relatorio.aluno_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:funcionario_id) %>:</strong></dt>
  <dd><%= @relatorio.funcionario_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              relatorios_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_relatorio_path(@relatorio), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              relatorio_path(@relatorio),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
