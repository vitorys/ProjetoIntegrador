<%- model_class = Estado -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:estado_nome) %></th>
      <th><%= model_class.human_attribute_name(:estado_uf) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @estados.each do |estado| %>
      <tr>
        <td><%= link_to estado.id, estado_path(estado) %></td>
        <td><%= estado.estado_nome %></td>
        <td><%= estado.estado_uf %></td>
        <td><%=l estado.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      estado_path(estado), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_estado_path(estado), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      estado_path(estado),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_estado_path,
            :class => 'btn btn-primary' %>
